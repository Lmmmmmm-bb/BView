{
  "name": "bviewer",
  "displayName": "Bviewer",
  "version": "1.1.0",
  "description": "用于查看 Bilibili 视频封面和 UP 主页背景的 Chrome 扩展程序",
  "packageManager": "pnpm@7.4.1",
  "author": "_lmmmmmm",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "react",
    "bilibili",
    "plasmo"
  ],
  "homepage": "https://github.com/Lmmmmmm-bb/BViewer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lmmmmmm-bb/BViewer"
  },
  "bugs": {
    "email": "lmmmmmm12138@gmail.com",
    "url": "https://github.com/Lmmmmmm-bb/BViewer/issues"
  },
  "scripts": {
    "dev": "plasmo dev & pnpm style:watch",
    "build": "plasmo build",
    "prepare": "husky install",
    "style:watch": "pnpm typed-scss-modules . --watch --ignore \"**/index.scss\""
  },
  "dependencies": {
    "@plasmohq/storage": "^0.6.2",
    "plasmo": "latest",
    "rctx-contextmenu": "^1.3.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@parcel/transformer-sass": "2.6.1",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/chrome": "0.0.190",
    "@types/node": "17.0.43",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.0",
    "typed-scss-modules": "^6.5.0",
    "typescript": "4.7.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
